{
  "name": "huddle",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,astro}\"",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/node": "^18.14.2",
    "eslint-config-custom": "workspace:*",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "prettier": "2.8.4",
    "prettier-plugin-astro": "^0.8.0",
    "turbo": "latest"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "packageManager": "pnpm@7.25.1",
  "lint-staged": {
    "*.{ts,tsx,md,astro}": "prettier --write"
  }
}
